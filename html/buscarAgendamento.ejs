                <tr class="tr_title_table">
                    <th>Horários</th>                                     
                </tr>                    
            </thead>
            <tbody id="tbody-table" class="tbody_table">
                <% pets.forEach(pet => { %> 
                    <tr>
                        <td>
                            <%= pet.nome %> - <%= formatarData(pet.dataServico) %>
                            <button id="remove_test-1" type="button" class="btn button-style-row" onclick="removerLinhaTabela();">Remover</button>
                            <button id="view_test-1" type="button" class="btn button-style-row" data-toggle="modal" data-target="#test-1">Infos</button>
                        </td>
                    </tr>
                <% }); %> 
            </tbody>
        </table>                    
    </div>
    <div class="button-position">
        <form action="/logout" method="post" class="btn pr-0">
            <button id="sair" type="submit" class="btn button-style">Sair</button>
        </form>
        <button id="novo-agendamento" type="button" class="btn button-style">Novo Agendamento</button>
